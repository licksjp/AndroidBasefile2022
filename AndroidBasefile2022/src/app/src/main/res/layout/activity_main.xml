<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/view_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="20dp"
        android:background="@color/white"
        android:lines="14"
        android:maxLines="14"
        android:text="@string/TopMessage"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TableLayout
        android:id="@+id/Screen_Color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_7"
                android:textColor="@color/black"
                android:textSize="32sp"

                ></Button>

            <Button
                android:id="@+id/button_8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_8"
                android:textColor="@color/black"
                android:textSize="32sp"


                ></Button>

            <Button
                android:id="@+id/button_9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_9"
                android:textColor="@color/black"
                android:textSize="32sp"></Button>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_4"
                android:textColor="@color/black"
                android:textSize="32sp"

                ></Button>

            <Button
                android:id="@+id/button_5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_5"
                android:textColor="@color/black"
                android:textSize="32sp"

                ></Button>

            <Button
                android:id="@+id/button_6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_6"
                android:textColor="@color/black"
                android:textSize="32sp"

                ></Button>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_1"
                android:textColor="@color/black"
                android:textSize="32sp"

                ></Button>

            <Button
                android:id="@+id/button_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_2"
                android:textColor="@color/black"
                android:textSize="32sp"

                ></Button>

            <Button
                android:id="@+id/button_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_3"
                android:textColor="@color/black"
                android:textSize="32sp"


                ></Button>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_Clear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="200px"
                android:text="@string/Button_Clear"
                android:textColor="@color/red"
                android:textSize="30sp"

                ></Button>

            <Button
                android:id="@+id/button_0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_0"
                android:textColor="@color/black"
                android:textSize="32sp"

                ></Button>

            <Button
                android:id="@+id/button_EXE"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="107px"
                android:layout_y="190px"
                android:text="@string/Button_EXE"
                android:textColor="@color/red"
                android:textSize="30sp"

                ></Button>
        </TableRow>

    </TableLayout>
</LinearLayout>